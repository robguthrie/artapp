%h2 Sign up

= semantic_form_for @artist, :as => resource_name, :url => registration_path(resource_name) do |f|
  = devise_error_messages!
  = f.inputs do
    =f.input :name
    =f.input :description, :hint => "Please include as much or as little information about yourself as you like. This is also the place to put public contact information such as website addresses"
    =f.input :phone, :hint => 'Contact phone number'
    =f.input :email
    =f.input :password
    =f.input :password_confirmation
  =f.buttons

= render :partial => "devise/shared/links" 
