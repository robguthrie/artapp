- title "Artist"

%p
  %strong Name:
  = @artist.name
%p
  %strong Description:
  = @artist.description
%p
  %strong Phone:
  = @artist.phone
%p
  %strong Email:
  = @artist.email

%p
  = link_to "Add artwork", new_artist_artwork_path(@artist)
  |
  = link_to "Edit", edit_artist_path(@artist)
  |
  = link_to "Destroy", @artist, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", artists_path
