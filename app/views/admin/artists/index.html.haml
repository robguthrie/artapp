- title "Artists"
%table
  %tr
    %th Name
    %th Email
    %th Phone
    %th Description
    %th Link
  - for artist in @artists
    %tr
      %td= artist.name
      %td= artist.email
      %td= artist.phone
      %td= truncate(artist.description)
      %td= link_to 'Show', admin_artist_path(artist)
      %td= link_to "Destroy", [:admin, artist], :confirm => 'Are you sure?', :method => :delete


